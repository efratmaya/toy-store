<Window x:Class="PL.SimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Simulator" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/new_header-mobile.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="timerTextBlock" Text="00:00:00" FontSize="76" TextAlignment="Center" Opacity="0.5"  FontWeight="Light" Margin="214,151,230,166" />

        <Button x:Name="finishProgress" Click="Button_Click_FinishProgress" Content="finish Progress" Margin="308,280,0,0" FontSize="24" FontFamily="Trebuchet MS" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" BorderBrush="#FFFFF7F7" BorderThickness="1,1,1,1" FontWeight="Bold"/>

        <Label x:Name="info" Content="" HorizontalAlignment="Left" Margin="60,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="-6.235,-1.512" Width="308" Height="126"/>
        <Label Content="" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" RenderTransformOrigin="-6.235,-1.512" Width="308" Height="112"/>
    </Grid>
</Window>